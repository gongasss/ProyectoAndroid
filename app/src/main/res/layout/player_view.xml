<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@color/md_theme_onPrimaryFixed">

    <HorizontalScrollView
        android:id="@+id/titleScrollView"
        android:layout_width="191dp"
        android:layout_height="31dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="64dp"
        android:scrollbarSize="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="patodalavida.wavpatodalavida.wavpatodalavida.wav"
            android:textAllCaps="false"
            android:textColor="@color/md_theme_background"
            android:textSize="22sp"
            android:textStyle="bold" />
    </HorizontalScrollView>

    <ImageButton
        android:id="@+id/playerPlayPauseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="152dp"
        android:background="@null"
        android:tint="@color/md_theme_secondaryFixed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_play_arrow_96" />
</androidx.constraintlayout.widget.ConstraintLayout>